doctype html
html
    head
        title Cumulonimbus
        meta(charset="utf-8")

        link(href="style.css", rel="stylesheet")

        // jquery
        script(src="/bower_components/jquery/dist/jquery.min.js")

        // polymer
        link(rel="import", href="/bower_components/polymer/polymer.html")
        script(src="/bower_components/webcomponentsjs/webcomponents-lite.min.js")

        // polymer components
        link(rel="import", href="/components/cbus-queue-item.html")
        link(rel="import", href="/components/cbus-episode.html")
        link(rel="import", href="/components/cbus-podcast-detail-episode.html")

        // ply
        link(rel="import", href="/assets/Ply/ply.html")

        // tooltipster
        link(rel="stylesheet", href="/assets/tooltipster/tooltipster.css")
        link(rel="stylesheet", href="/assets/tooltipster/themes/tooltipster-cbus.css")
        script(src="/assets/tooltipster/jquery.tooltipster.min.js")

        // color thief
        script(src="/assets/color-thief/color-thief.min.js")

        // moment
        script(src="/bower_components/moment/min/moment.min.js")

        // noty
        script(src="/assets/noty/jquery.noty.packaged.min.js")
        script(src="/assets/noty/themes/material.js")

        // twitter text
        script(src="/assets/twitter-text/twitter-text-1.9.4.min.js")

        // google fonts
        link(href="//fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i&subset=cyrillic,greek,latin-ext", rel="stylesheet")
        link(href="//fonts.googleapis.com/css?family=Roboto+Condensed:400,300,700&subset=cyrillic,greek,latin-ext", rel="stylesheet")
        link(href="//fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
    body
        header
            .logo
            nav.header_nav
                a.material-icons.md-36(data-target="stream") view_list
                a.material-icons.md-36(data-target="queue") queue_music
                a.material-icons.md-36(data-target="filters") video_library
                a.material-icons.md-36(data-target="settings") settings
            .header_actions
                button.button.header_action.header_action--refresh-episodes.material-icons(data-scope="stream") refresh

        .content-container
            section.content#stream
                ol.list.list--episodes
            section.content#queue
                ol.list.list--queue
            section.content#filters
                .filters_search
                    input(type="search", placeholder="Search...")
                .filters_feeds-container
                    .filters_feeds.filters_feeds--search-results
                    .filters_feeds.filters_feeds--subscribed
            section.content#settings
                //- .settings_section
                //-     h3 Feeds
                //-     .settings_label
                //-         button.material.settings_button--remove-duplicate-feeds Remove duplicate subscriptions
                //-     .settings_label
                //-         button.material.settings_button--update-feed-artworks Update podcast artwork
                .settings_section
                    .settings_label
                        .settings_label_left
                            button.material.settings_button--generate-opml Export as OPML
                    .settings_label
                        .settings_label_left
                            button.material.settings_button--update-feed-artworks Update podcast cover art

        .podcast-detail-container
            .podcast-detail
                .podcast-detail_header
                    .podcast-detail_header_image
                    .podcast-detail_header_text
                        .podcast-detail_header_title
                        .podcast-detail_header_publisher
                        .podcast-detail_header_description
                    .podcast-detail_controls
                        button.podcast-detail_control.podcast-detail_control--toggle-subscribe
                .podcast-detail_episodes

        .player.shadow
            .player_main
                .player_top
                    .player_buttons
                        button.button.player_button.player_button--backward.material-icons.md-36 replay_10
                        button.button.player_button.player_button--play.material-icons.md-36 play_arrow
                        button.button.player_button.player_button--forward.material-icons.md-36 forward_30
                    .player_current
                        span.player_time.player_time--now --:--
                        input.player_slider(type="range", min="0", max="1000", value="0")
                        span.player_time.player_time--total --:--
                .player_bottom
                    .player_detail
                        .player_detail_header
                            .player_detail_image
                            .player_detail_header_right
                                .player_detail_title
                                .player_detail_feed-title
                                .player_detail_date
                        .player_detail_body
                            .player_detail_description
                .player_waveform-container
                    canvas#player_waveform

        .audios

        script(src="js/all.js")
